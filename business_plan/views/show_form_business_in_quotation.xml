<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="sale_order_view_inherit">
            <field name="name">sale.order.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='action_draft']"
                       position="after">
                    <button name="action_create_plan" string="Create plan" type="object" attrs="{'invisible': ['|' , ('business_plan', '!=', False) , ('state','!=' , 'draft')]}" />
                </xpath>
                <xpath expr = "//field[@name='partner_id']" position="after">
                    <field name="business_plan" readonly = '1' force_save = '1' />

                </xpath>
            </field>
        </record>
    </data>
</odoo>
